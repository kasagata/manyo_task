<h1><%= t('.title') %></h1>
<% if @user.errors.any? %>
  <div class="error_explanation">
    <h4 class="alert-heading">アカウントの更新に失敗しました</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class='container p-2'>
  <%= form_with(model: @user, url: admin_user_path(@user), local: true, method: :patch) do |f| %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %><br>
      <%= f.password_field :password, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :admin %><br>
      <div class="form-check">
        <%= f.check_box :admin, class:"form-check-input position-static" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit t('helpers.submit.create'), id: "update-user", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
<%= link_to t('common.back') ,admin_users_path, id: "back" %>
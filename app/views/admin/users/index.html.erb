<h1><%= t('.title') %></h1>
<% if @user && @user.errors.any? %>
  <div class="error_explanation">
    <h2>アカウント削除に失敗しました</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.name") %></th>
      <th><%= t("activerecord.attributes.user.email") %></th>
      <th><%= t("activerecord.attributes.user.admin") %></th>
      <th><%= t("タスク数") %></th>
      </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? t('helpers.boolean.true') : t('helpers.boolean.false')  %></td>
        <td><%= user.tasks.size %></td>
        <td><%= link_to t('common.show'), admin_user_path(user), class:"show-user" %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user), class:"edit-user" %></td>
        <td><%= link_to t('common.destroy'), admin_user_path(user), class:"destroy-user", method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1><%= t('.title') %></h1>
<% if @task.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_with(model: @task, local: true) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label :deadline_on %><br>
    <%= f.date_field :deadline_on %>
  </div>

  <div class="field">
    <%= f.label :priority %><br>
    <%= f.select :priority, Task.priorities_i18n.invert, { include_blank: true} %>
  </div>

  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, Task.statuses_i18n.invert, { include_blank: true} %>
  </div>

  <div class="actions", id:"update-task">
    <%= f.submit t('helpers.submit.update'), id:"update-task" %>
  </div>
<% end %>
  
<%= link_to t('common.back'), tasks_path, id:"back" %>
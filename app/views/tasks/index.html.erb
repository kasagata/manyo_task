<h1><%= t('.title') %></h1>

<%= form_with(scope: :search, url: tasks_path, method: :get, local: true) do |f| %>
 <div class="field">
    <%= f.label t("activerecord.attributes.task.status") %><br>
    <%= f.select :status, Task.statuses_i18n.invert, { include_blank: true} %>
  </div>
  <div class="field">
    <%= f.label t("activerecord.attributes.task.title") %><br>
    <%= f.text_field :title %>
  </div>  
  <div class="actions">
    <%= f.submit t('common.search'), id:"search_task" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.task.title") %></th>
      <th><%= t("activerecord.attributes.task.content") %></th>
      <th><%= t("activerecord.attributes.task.created_at") %></th>
      <th><%= link_to t("activerecord.attributes.task.deadline_on"), tasks_path(sort_deadline_on: true) %></th>
      <th><%= link_to t("activerecord.attributes.task.priority"), tasks_path(sort_priority: true) %></th>
      <th><%= t("activerecord.attributes.task.status") %></th>
      </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime("%_6Y/%-m/%-d %H:%M")  %></td>
        <td><%= task.deadline_on.strftime("%_6Y/%-m/%-d %H:%M")  %></td>
        <td><%= task.priority_i18n %></td>
        <td><%= task.status_i18n %></td>
        <td><%= link_to t('common.show'), task, class:"show-task" %></td>
        <td><%= link_to t('common.edit'), edit_task_path(task), class:"edit-task" %></td>
        <td><%= link_to t('common.destroy'), task, class:"destroy-task", method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
      </tr>
    <% end %>
    <%= paginate @tasks %>
  </tbody>
</table>
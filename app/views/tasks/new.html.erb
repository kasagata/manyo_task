<h1><%= t('.title') %></h1>
<% if @task.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_with(model: @task, local: true) do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </div>
  
    <div class="actions">
      <%= f.submit t('helpers.submit.create'), id:"create-task" %>
    </div>
<% end %>
  
<%= link_to t('common.back'), tasks_path, id:"back" %>